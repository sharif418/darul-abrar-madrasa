# ================================================
# App Configuration
# ================================================
APP_NAME="Darul Abrar Madrasa"
APP_ENV=local
# NOTE: Laravel auto-generates APP_KEY via: php artisan key:generate
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance driver: file|cache (default: file)
APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP built-in server workers (optional)
PHP_CLI_SERVER_WORKERS=4

# Hashing cost (higher is slower/stronger)
BCRYPT_ROUNDS=12

# ================================================
# Logging
# ================================================
# Use 'stack' to aggregate multiple channels (recommended)
LOG_CHANNEL=stack
# Included in stack; for local dev use 'single' or 'daily'
LOG_STACK=single
# Deprecations can be routed separately (null to ignore)
LOG_DEPRECATIONS_CHANNEL=null
# Local: debug, Production: error
LOG_LEVEL=debug

# ================================================
# Database
# ================================================
# Default DB driver (sqlite for zero-config local dev)
DB_CONNECTION=sqlite

# For sqlite, create database/database.sqlite file or ensure migrations create it.
# You can switch to MySQL by commenting sqlite block and uncommenting MySQL block below.

# --- MySQL example (uncomment to use) ---
# DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=darul_abrar_madrasa
# DB_USERNAME=madrasa_user
# DB_PASSWORD=secret

# --- PostgreSQL example (uncomment to use) ---
# DB_CONNECTION=pgsql
# DB_HOST=127.0.0.1
# DB_PORT=5432
# DB_DATABASE=darul_abrar_madrasa
# DB_USERNAME=postgres
# DB_PASSWORD=secret

# ================================================
# Session / Cache / Queue
# ================================================
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting and queues
BROADCAST_CONNECTION=log
QUEUE_CONNECTION=database

# Cache store: file|array|redis|memcached|database
CACHE_STORE=file
# CACHE_PREFIX=

# Memcached (if used)
MEMCACHED_HOST=127.0.0.1

# ================================================
# Redis
# ================================================
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ================================================
# Filesystems
# ================================================
# Default filesystem disk
FILESYSTEM_DISK=public

# ================================================
# Mail
# ================================================
# For local dev: log driver
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ================================================
# AWS (optional)
# ================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ================================================
# Frontend
# ================================================
VITE_APP_NAME="${APP_NAME}"

